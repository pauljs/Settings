" Syntax highlighting
syntax enable    

" Copies indentation from previous line when starting new line
set autoindent

" 
filetype indent on
set expandtab
set smarttab

" Indentation setting for using 4 spaces instead of tabs
set shiftwidth=4
set softtabstop=4
set tabstop=4
set mouse=a
set showmatch
set lazyredraw
nnoremap j gj
nnoremap k gk

" Display line numbers on left
set number
" colors peachpuff 

set incsearch
set hlsearch

set foldenable
set foldlevelstart=3
